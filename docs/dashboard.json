{
  "uid": "ecom-observability",
  "title": "E-Commerce Microservices - Overview",
  "tags": ["ecommerce", "prometheus", "microservices"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "stat",
      "title": "Service Up/Down",
      "id": 1,
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ]
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "up{job=~\"$job\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "transformations": [
        { "id": "labelsToFields", "options": { "valueLabel": "instance" } },
        { "id": "groupBy", "options": { "fields": { "Value": { "operation": "lastNotNull" }, "job": { "operation": "unique" } } } }
      ]
    },

    {
      "type": "timeseries",
      "title": "Scrape health (per service)",
      "id": 2,
      "gridPos": { "h": 8, "w": 16, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list" } },
      "targets": [
        {
          "expr": "sum by(job) (scrape_samples_scraped{job=~\"$job\"})",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Error rate (%)",
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "targets": [
        {
          "expr": "100 * sum by (job) (rate(http_requests_total{job=~\"^(auth|catalog|order|cart|payment|shipping|notifications)$\", status=~\"4..|5..\"}[5m])) / sum by (job) (rate(http_requests_total{job=~\"^(auth|catalog|order|cart|payment|shipping|notifications)$\"}[5m]))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "options": { "legend": { "showLegend": true, "displayMode": "list" } }
    },

    {
      "type": "gauge",
      "title": "p95 latency (ms)",
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 250 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, job) (rate(http_request_duration_seconds_bucket{job=~\"$job\"}[5m]))) * 1000",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Request rate (req/s)",
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by(job) (rate(http_requests_total{job=~\"$job\"}[5m]))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list" } }
    },

    {
      "type": "timeseries",
      "title": "Avg scrape duration (ms) over 5m",
      "id": 6,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "1000 * avg by(job) (avg_over_time(scrape_duration_seconds{job=~\"$job\"}[5m]))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list" } }
    },

    {
      "type": "timeseries",
      "title": "Samples scraped per target (last scrape)",
      "id": 7,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by(instance, job) (scrape_samples_scraped{job=~\"$job\"})",
          "legendFormat": "{{job}} â€” {{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list" } }
    },

    {
      "type": "timeseries",
      "title": "5-min availability % by service",
      "id": 8,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "100 * avg by(job) (avg_over_time(up{job=~\"$job\"}[5m]))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": { "legend": { "showLegend": true, "displayMode": "list" } }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true },
        "hide": 0
      },
      {
        "name": "job",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "query": "label_values(up, job)",
        "regex": "/^(auth|cart|catalog|order|payment|shipping|notifications|postgres|redis|kafka).*$/",
        "current": {
          "text": "auth, cart, catalog, order, payment, shipping, notifications",
          "value": ["auth", "cart", "catalog", "order", "payment", "shipping", "notifications"],
          "selected": true
        }
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" }
}
