# --- Database ---
POSTGRES_DSN=postgresql+psycopg://postgres:postgres@postgres:5432/appdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=appdb

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Kafka ---
KAFKA_BOOTSTRAP=kafka:9092
KAFKA_BROKERS=kafka:9092

# --- Object Storage (MinIO) ---
S3_ENDPOINT=http://minio:9000
S3_BUCKET=media
S3_ACCESS_KEY=admin
S3_SECRET_KEY=adminadmin

# --- Auth ---
JWT_SECRET=devsecret
JWT_ALGORITHM=HS256

# --- Internal service auth ---
SVC_INTERNAL_KEY=devkey

# Kafka topics (defaults exist in code, override if needed)
TOPIC_ORDER_EVENTS=order.events
TOPIC_PAYMENT_EVENTS=payment.events
TOPIC_SHIPPING_EVENTS=shipping.events

# --- Notifications service ---
# For local dev, MailHog is used
SMTP_HOST=mailhog
SMTP_PORT=1025
FROM_EMAIL=no-reply@example.local
